@model IEnumerable<RecipeSite.Models.Recipe>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Recipe List</title>
    <link rel="stylesheet" href="lib/bootstrap/css/bootstrap-theme.min.css" />
    <link rel="stylesheet" href="/css/recipestyler.css" />
</head>
<body>
    <div class="content">
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                </tr>
            </thead>
            <tbody>
                @foreach (RecipeSite.Models.Recipe r in Model)
                {
                    <tr>
                        <td>@r.Name</td>
                        <td>@r.Category</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>  
</body>
</html>
